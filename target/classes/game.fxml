<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.ai.tictactoe.gui.GameController">
    <top>
        <VBox spacing="10.0" alignment="CENTER">
            <padding>
                <Insets top="20.0" bottom="10.0"/>
            </padding>
            <Label text="Tic-Tac-Toe" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="statusLabel" text="Your turn!" style="-fx-font-size: 18px; -fx-text-fill: #3498db;"/>
            <Label fx:id="infoLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </top>
    
    <center>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            
            <!-- Game Board -->
            <GridPane fx:id="boardGrid" hgap="5.0" vgap="5.0" alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 5;"/>
            
            <!-- Debug Panel -->
            <VBox fx:id="debugPanel" spacing="10.0" prefWidth="250.0" visible="false" managed="false">
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                </padding>
                <style>
                    -fx-background-color: #ecf0f1;
                    -fx-border-color: #bdc3c7;
                    -fx-border-width: 2;
                    -fx-border-radius: 5;
                    -fx-background-radius: 5;
                </style>
                
                <Label text="AI Debug Info" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>
                <Label text="Move Evaluations:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ScrollPane fitToWidth="true" prefHeight="300.0">
                    <VBox fx:id="debugScoresBox" spacing="5.0"/>
                </ScrollPane>
                <Separator/>
                <Label fx:id="debugStatsLabel" text="" style="-fx-font-size: 12px;" wrapText="true"/>
            </VBox>
        </HBox>
    </center>
    
    <bottom>
        <HBox spacing="15.0" alignment="CENTER">
            <padding>
                <Insets top="20.0" bottom="20.0"/>
            </padding>
            <Button text="Restart Game" prefWidth="130.0" prefHeight="40.0" onAction="#handleRestart" style="-fx-font-size: 14px; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8;"/>
            <Button text="Back to Menu" prefWidth="130.0" prefHeight="40.0" onAction="#handleBackToMenu" style="-fx-font-size: 14px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8;"/>
        </HBox>
    </bottom>
</BorderPane>
