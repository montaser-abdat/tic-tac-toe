<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.ai.tictactoe.gui.MenuController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    
    <Label text="Tic-Tac-Toe AI" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="48.0"/>
        </font>
    </Label>
    
    <Label text="Alpha-Beta Pruning with ML Evaluation" textFill="#7f8c8d">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    
    <VBox spacing="15.0" alignment="CENTER">
        <padding>
            <Insets top="30.0"/>
        </padding>
        
        <Button fx:id="startButton" text="Start Game" prefWidth="200.0" prefHeight="50.0" onAction="#handleStartGame" style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10;"/>
        
        <Button fx:id="settingsButton" text="Settings" prefWidth="200.0" prefHeight="50.0" onAction="#handleSettings" style="-fx-font-size: 18px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 10;"/>
        
        <Button fx:id="helpButton" text="Help" prefWidth="200.0" prefHeight="50.0" onAction="#handleHelp" style="-fx-font-size: 18px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 10;"/>
        
        <Button fx:id="exitButton" text="Exit" prefWidth="200.0" prefHeight="50.0" onAction="#handleExit" style="-fx-font-size: 18px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 10;"/>
    </VBox>
</VBox>
